# Paper2ImplementationDoc Environment Configuration
# Copy this file to .env and fill in your actual values

# LLM API Keys (choose one or more)
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Default LLM Provider
DEFAULT_LLM_PROVIDER=gemini

# LLM Model Names (optional, defaults are provided)
GEMINI_MODEL=gemini-1.5-flash
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Application Settings
DEFAULT_OUTPUT_DIR=./output
DEFAULT_ANALYSIS_DEPTH=detailed
DEFAULT_OUTPUT_FORMAT=markdown
DEFAULT_LANGUAGE=english

# Processing Limits
MAX_SECTIONS=10
MAX_FILE_SIZE_MB=100
PDF_PROCESSING_TIMEOUT=300

# Feature Flags
ENABLE_ARXIV_DOWNLOAD=false
ENABLE_LLM_CACHE=true
ENABLE_DIAGRAMS=false

# Logging
LOG_LEVEL=INFO
VERBOSE_LOGGING=false

# Development Settings (optional)
DEBUG_MODE=false
SAVE_INTERMEDIATE_FILES=false 